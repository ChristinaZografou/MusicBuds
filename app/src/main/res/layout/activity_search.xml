<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/welcome"
        android:layout_marginTop="32dp"
        android:hint="Search..."
        android:inputType="text" />

    <TextView
        android:id="@+id/recommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MusicBuds for you!"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/search"
        android:layout_marginTop="80dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/recommendations"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/recom1"
            android:layout_marginRight="8dp">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/recom1"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="4dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/recom_image1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="elena54Cam"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/recom2"
            android:layout_marginRight="8dp">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/recom2"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="4dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/recom_image2" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tomRock3"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/recom3">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/recom3"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="4dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/recom_image3" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="peteWPat"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_above="@+id/bottom_menu"
        android:layout_marginTop="8dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/bottom_menu"
        android:layout_marginTop="8dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:id="@+id/home_icon"
            android:src="@drawable/home_icon" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:id="@+id/profile_icon"
            android:src="@drawable/profile_icon" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:id="@+id/search_icon"
            android:src="@drawable/search_icon"
            android:background="@color/colorAccent"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:id="@+id/notifications_icon"
            android:src="@drawable/notifications_icon" />
    </LinearLayout>
</RelativeLayout>